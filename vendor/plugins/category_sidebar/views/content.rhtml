<% unless sidebar.categories.blank? -%>
<h3><%= _("Categories")%></h3>
<ul id="categories">
<% for category in sidebar.categories -%>
  <% unless sidebar.empty.blank? and category.descendants_articles.are_published == 0 %>
  <li><%= link_to h(category.name), category_url(category)  %> <% if sidebar.count %><em>(<%= category.descendants_articles.are_published.size %>)</em><% end %></li>
  <% end %>
<% end -%>
</ul>
<% end %>
