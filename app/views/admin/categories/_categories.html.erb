  <tr>
    <th><%= _("Title") %></th>
  </tr>
  <%= render_void_table(@categories.size, 2)  %>
  <%= category_tree(@categories,:matrix=>true) %> 
  <%#= render :partial => 'category', :collection => @categories %>
